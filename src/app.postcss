html {
  overflow-y: scroll;
}

body {
  font-family: 'Montserrat Alternates', sans-serif;
  & h1, h2, h3, h4, h5, h6 {
    font-family: 'Montserrat Alternates', sans-serif;
  }
}

* {
  cursor: initial;
}

a {
  cursor: pointer;
}

h1 {
  margin-bottom: 1em;
}

h2 {
  margin-bottom: 0.85em;
}

h3 {
  margin-bottom: 0.75em;
}

h4, h5, h6 {
  margin-bottom: 0.6em;
}

.page-container {
  min-height: 100dvh;
}